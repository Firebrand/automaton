{
  "manifest_version": 3,
  "name": "Automaton - Playbook Runner",
  "version": "1.0",
  "description": "Chrome extension to import and run playbook actions on web pages",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Automaton Playbook Runner"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png"
  }
}
